//Завдання 1
float a,x;
double y;
Console.WriteLine(" CALCULATION RESULTS");
for (a = 0.5f; a <= 1.25; a+=0.25f)
{
    Console.WriteLine(" a={0}", a);
    for (x =1; x <=7; x+=0.25f)
    {
        y = Convert.ToDouble(Math.Sqrt(Math.Sqrt(a+1)*x)+Math.Exp(0 - Math.Pow(x, 3))/Math.Sqrt(2*a*x));
        Console.WriteLine("  x={0}  \t   y={1}", x,y);
    }
}
